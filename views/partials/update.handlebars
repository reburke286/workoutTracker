<body>
    <nav id="nav-color">
        <div class="nav-wrapper purple darken-4">
            <a href="/" class="brand-logo  purple darken-4">Home</a>
            <ul id="nav-mobile" class="right purple darken-4 hide-on-med-and-down">
                <li><a href="/add">New Workout</a></li>
                <li><a href="/update">Update</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <form action="/submit" method="post">
            <h2>Update a Workout</h2>
        </form>
        <div class="row">
            <div class="col l6">
                <div>
                    <form>
                        <input class="input" id="id" type="text" name="id" placeholder="copy and paste workout ID" />
                        <input class="input" id="title-update" type="text" name="title" placeholder="Title" />
                        <textarea id="body-update" type="text" name="body" placeholder="Workout Information"></textarea>
                    </form>
                    <button id="update" class="waves-effect waves-light purple darken-4 btn-large">
                        Update
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col l10">
                <div class="workout">
                    {{#each workouts }}

                    <p>ID: {{ this.id }}</p>
                    <p>Title: {{ this.title }}</p>
                    <p>Description: {{ this.body }}</p>
                    <button data-id="{{this.id}}"
                        class="delete-button waves-effect waves-light purple darken-4 btn-large">Delete</button>

                    {{/each}}
                </div>
            </div>
        </div>

    </div>